class Solution {
public:
    // int maxProduct(vector<int>& nums) {
    //     int n = nums.size();
    //     int maxi = nums[0];

    //     for(int i = 0; i < n; i++) {
    //         int prod = 1;
    //         for(int j = i; j < n; j++) {
    //             prod *= nums[j];

    //             maxi = max(maxi, prod);
    //         }
    //     }
    //     return maxi;
    // }

     int maxProduct(vector<int>& nums) {
        int n = nums.size();
        int prefix = 1, suffix = 1, maxi = nums[0];

        for(int i = 0; i < n; i++) {
            prefix *= nums[i];
            suffix *= nums[n - i - 1];

            maxi = max(maxi, max(prefix, suffix));

            if(prefix == 0) prefix = 1;
            if(suffix == 0) suffix = 1;
        }
        return maxi;
     }
};
