class Solution {
public:
    // vector<int> maxSlidingWindow(vector<int>& nums, int k) {
    //     int n = nums.size();

    //     vector<int> result;
    //     if(n == 0) return result;
    //     int low = 0, high = k;
    //     multiset<int> st;
    //     for(int i = 0; i < k; i++) {
    //         st.insert(nums[i]);
    //     }
    //     while(high < n) {
    //         result.push_back(*st.rbegin());
    //         st.erase(st.find(nums[low]));
    //         st.insert(nums[high]);
    //         low++;
    //         high++;
    //     }
    //     result.push_back(*st.rbegin());
    //     return result;
    // }

    vector<int> maxSlidingWindow(vector<int>& nums, int k) {
        int n = nums.size();
        vector<int> result;

        deque<int> dq;

        for(int i = 0; i < n; i++) {
            if(!dq.empty() && dq.front() <= i - k) {
                dq.pop_front();
            }

            while(!dq.empty() && nums[dq.back()] < nums[i]) {
                dq.pop_back();
            }

            dq.push_back(i);

            if(i >= k - 1) {
                result.push_back(nums[dq.front()]);
            }
        }
        return result;
    }
};
