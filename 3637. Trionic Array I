    // bool check(vector<int>& nums, int p, int q) {
    //     int n = nums.size();

    //     for(int i = 1; i <= p; i++) {
    //         if(nums[i - 1] >= nums[i]) return false;
    //     }

    //     for(int i = p; i < q; i++) {
