class Solution {
public:
    // int subarraySum(vector<int>& nums, int k) {
    //     int n = nums.size(), cnt = 0;

    //     for(int i = 0; i < n; i++) {
    //         int sum = 0;
    //         for(int j = i; j < n; j++) {
    //             sum += nums[j];
    //             if(sum == k) {
    //                 cnt++;
    //             }
    //         }
    //     }
    //     return cnt;
    // }

    int subarraySum(vector<int>& nums, int k) {
        int n = nums.size();
        unordered_map<int, int> mp;

        mp[0] = 1;
        int sum = 0, cnt = 0;
        for(int i = 0; i < n; i++) {
            sum += nums[i];

            int rem = sum - k;
            if(mp.find(rem) != mp.end()) {
                cnt += mp[rem];
            }
            // mp.insert({sum, i});
            mp[sum]++;
        }
        return cnt;
    }
};
