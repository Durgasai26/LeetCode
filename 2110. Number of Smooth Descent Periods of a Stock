class Solution {
public:
    // long long getDescentPeriods(vector<int>& prices) {
    //     int n = prices.size();

    //     long long cnt = 0;

    //     for(int i = 0; i < n; i++) {
    //         cnt++;
    //         for(int j = i + 1; j < n; j++) {
    //             if(prices[j] - prices[j - 1] == -1) {
    //                 cnt++;
    //             }else{
    //                 break;
    //             }
    //         }
    //     }
    //     return cnt;
    // }

    long long getDescentPeriods(vector<int>& prices) {
        int n = prices.size();


        long long cnt = n;
        int l = 0, r = 1;
        while(r < n) {
            if(prices[r] - prices[r - 1] == -1) {
                cnt += (r - l);
            }else{
                l = r;
            }
            r++;
        }
        return cnt;
    }
};
